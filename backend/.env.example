# Django Core Settings
# ===================================
# SECURITY WARNING: Generate a strong secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ===================================
# For development, SQLite is used by default (no configuration needed)
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# CORS Settings
# ===================================
# Comma-separated list of allowed origins for CORS
# Development default includes Vite dev server
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Wagtail CMS Settings
# ===================================
WAGTAIL_SITE_NAME=Modern Board

# Base URL for Wagtail admin (without /admin or trailing slash)
WAGTAILADMIN_BASE_URL=http://localhost:8000

# Email Configuration (Development)
# ===================================
# For development, emails are logged to console
# For production, configure SMTP settings:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Static and Media Files
# ===================================
# These are usually not needed in development
# STATIC_URL=/static/
# MEDIA_URL=/media/
# STATIC_ROOT=/path/to/static
# MEDIA_ROOT=/path/to/media

# Django REST Framework
# ===================================
# Pagination settings (default: 20)
# DRF_PAGE_SIZE=20

# Security Settings (Production Only)
# ===================================
# Uncomment these for production deployment
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# Logging
# ===================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
